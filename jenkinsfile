pipeline {
    agent any
    
    triggers { 
        githubPush()
    }

    stages {
        stage('pull code from git') {
            steps {
                git branch: 'devlop',
                    url: 'https://github.com/janakdasari-art/website-new.git'
                echo " pulled code "
            }
        }

        stage('building image and creating a container') {
            steps {
                sh '''
                docker rmi janakdasari/project2 || true
                docker build -t janakdasari/project2 .
                docker push janakdasari/project2
                '''
            }
        }
    }
}
